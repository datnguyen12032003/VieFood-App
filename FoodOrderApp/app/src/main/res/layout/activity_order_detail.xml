<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFD"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/title_order_history_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order History Detail"
                android:textColor="#FF5722"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/foodIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_order_detail"
                android:layout_marginEnd="8dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/orderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="id"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/orderStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã giao"
                    android:textSize="12sp"
                    android:textColor="#808080" />
            </LinearLayout>

            <TextView
                android:id="@+id/rateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Review"
                android:textColor="#00AEEF"
                android:textStyle="bold"
                android:layout_gravity="end" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/orderAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="72 Nguyễn Văn Cừ Nối Dài, phường An Bình"
                android:textSize="14sp"
                android:textColor="#000"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/orderPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0398073861"
                android:textSize="14sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/orderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:text="16 TH10, 2024 18:29"
                android:textColor="#808080"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/orderNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="giao le le"
                android:textSize="14sp"
                android:textColor="#000" />
        </LinearLayout>

        <TextView
            android:id="@+id/orderSummaryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order summary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000"
            android:paddingBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_order_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp" />

        <!-- Price Summary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/orderSubtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng tạm tính: 53.000đ"
                android:textSize="14sp"
                android:textColor="#000"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/orderDelivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phí áp dụng: 19.000đ"
                android:textSize="14sp"
                android:textColor="#000"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/orderDiscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giảm: -7.000đ"
                android:textSize="14sp"
                android:textColor="#FF0000"
                android:paddingBottom="4dp" />

            <TextView
                android:id="@+id/orderTotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng cộng: 58.000đ"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000" />
        </LinearLayout>

        <Button
            android:id="@+id/reorderButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reorder"
            android:layout_marginTop="16dp"
            android:background="@color/orange"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/updateStatusButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Order Status"
            android:layout_marginTop="16dp"
            android:background="@color/orange"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
